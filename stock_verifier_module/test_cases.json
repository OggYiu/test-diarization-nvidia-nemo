    },
    {
      "id": "TC008",
      "description": "",
      "input": {
        "stock_code": "01572",
        "stock_name": "金蝶國際"
      },
      "expected": {
        "stock_code": "00268",
        "stock_name": "金蝶國際"
      },
      "tags": [],
